<userInput>
    <panel order="0" id="rvkey">
        <field type="staticText" align="left"
            txt="Please enter your $rvFullProductName license email and key.  If you do not have a license for $rvFullProductName, one can be obtained from http://runtimeverification.com/${rvProductId}."
            id="rvKey.text"/>
        <field type="space" />
        <field type="text" variable="rvKeyEmail">
            <spec txt="Your license email:" id="rvkey.email.label" size="30"/>
        </field>
        <field type="space" />
        <field type="text" variable="rvKeySecret">
            <description align="left"
                id="rvkey.secret"/>
            <spec txt="Your license key:" id="rvkey.secret.label" size="30"/>
        </field>
    </panel>
</userInput>
